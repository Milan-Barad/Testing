<style>
        .tabbing-section {
            padding: 100px 0;
        }

        .tabbing-section .page-width {
            max-width: 1430px;
            margin: 0 auto;
            padding: 0 15px;
            width: 100%;
            display: block;
        }

        .tab-container {
            border: 2px dashed #BCBBBB;
            border-radius: 40px;
            overflow: hidden;
        }

        /* Tabbed Interface Styles */
        .tabbed-interface {
            display: flex;
        }

        .tab-buttons {
            display: flex;
            background: #000;
            flex-direction: column;
            width: 100%;
            max-width: 480px;
            padding: 50px 0 100px 50px;
            border-radius: 40px 0 0 40px;
            margin: -2px;
        }

        .tab-button {
            flex: 1;
            padding: 15px;
            background: #000;
            color: #fff;
            border: none;
            cursor: pointer;
            text-align: left;
            font-size: 16px;
            transition: background 0.3s;
            position: relative;
            margin-bottom: 10px;
        }

        .tab-button.active {
            background: #ffc107;
            color: #000;
            margin-right: -50px;
            z-index: 1;
        }

        .tab-content {
            background: #fff;
            padding: 20px 20px 20px 80px;
            width: 100%;
            border-radius: 0 40px 40px 0;
        }

        .tab-content p {
            margin: 0 0 15px;
            color: #666;
        }

        .tab-content ul {
            list-style: none;
            padding: 0;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
        }

        .tab-content ul li {
            margin: 10px 0;
            color: #f60;
            position: relative;
            padding-left: 40px;
        }

        .tab-content ul li:after {
            position: absolute;
            content: '';
            background: #F97316;
            height: 10px;
            width: 20px;
            border-radius: 50px;
            left: 0px;
            top: 7px;
        }

        /* Accordion Styles */
        .accordion-interface {
            display: none;
        }

        .accordion-button {
            padding: 15px;
            background: #000;
            color: #fff;
            border: none;
            cursor: pointer;
            text-align: left;
            font-size: 16px;
            width: 100%;
            border-bottom: 1px solid #333;
            position: relative;
        }

        .accordion-button:after {
            content: '+';
            position: absolute;
            right: 15px;
            font-size: 20px;
            transition: transform 0.3s;
        }

        .accordion-button.active:after {
            content: '-';
        }

        .accordion-content {
            padding: 0 15px 20px;
            background: #fff;
            display: none;
            border-radius: 0 0 40px 40px;
        }

        .accordion-content.active {
            display: block;
        }

        .accordion-content p {
            margin: 0 0 15px;
            color: #666;
        }

        .accordion-content ul {
            list-style: none;
            padding: 0;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
        }

        .accordion-content ul li {
            margin: 10px 0;
            color: #f60;
            position: relative;
            padding-left: 40px;
        }

        .accordion-content ul li:after {
            position: absolute;
            content: '';
            background: #F97316;
            height: 10px;
            width: 20px;
            border-radius: 50px;
            left: 0px;
            top: 7px;
        }

        /* Media Query for Mobile */
        @media screen and (max-width: 767px) {
            .tabbed-interface {
                display: none;
            }
            .accordion-interface {
                display: block;
            }
            .tab-container {
                border-radius: 40px;
            }
        }
    </style>

<section class="tabbing-section">
