                </div>
            </div>
        </div>
    </section>

    <script>
        function openTab(tabName) {
            var i, tabpanes, tabbuttons;
            tabpanes = document.getElementsByClassName("tab-pane");
            tabbuttons = document.getElementsByClassName("tab-button");
            for (i = 0; i < tabpanes.length; i++) {
                tabpanes[i].style.display = "none";
            }
            for (i = 0; i < tabbuttons.length; i++) {
                tabbuttons[i].classList.remove("active");
            }
            document.getElementById(tabName).style.display = "block";
            event.currentTarget.classList.add("active");
        }

        function toggleAccordion(accName) {
            var i, accContents, accButtons;
            accContents = document.getElementsByClassName("accordion-content");
            accButtons = document.getElementsByClassName("accordion-button");
            var content = document.getElementById(accName);
            var isActive = content.classList.contains("active");

            for (i = 0; i < accContents.length; i++) {
                accContents[i].style.display = "none";
                accContents[i].classList.remove("active");
            }
            for (i = 0; i < accButtons.length; i++) {
                accButtons[i].classList.remove("active");
            }
            if (!isActive) {
                content.style.display = "block";
                content.classList.add("active");
                event.currentTarget.classList.add("active");
            }
        }
    </script>

