{% style %}
  .tab-with-accordion {
    padding-top: 100px;
    padding-bottom: 100px;
  }
  .tab-with-accordion .page-width {
    max-width: 1300px;
    padding: 0 15px;
    margin: 0 auto;
    width: 100%;
  }
  .tab-with-accordion .lab-results__heading {
    font-family: "Bakbak One", sans-serif;
    font-size: 28px;
    font-weight: 700;
    line-height: 1.4em;
    letter-spacing: 0;
    text-transform: none;
    padding-bottom: 30px;
    margin: 0;
  }
  .tab-with-accordion .lr-tabs {
    display: flex;
    border: 1px solid #000;
    border-bottom: none;
    background: #fff;
  }
  .tab-with-accordion .lr-tabs button.lr-tab.is-active {
    background: #c8b9b9;
  }
  .tab-with-accordion .lr-tab {
    padding: 16px;
    cursor: pointer;
    font-weight: 700;
    font-size: 18px;
    font-family: "Bakbak One", sans-serif;
    background: #fff;
    transition: background 0.3s;
    appearance: none;
    border: none;
    border-right: 1px solid #000;
  }
  .tab-with-accordion .lr-panel {
    display: none;
    border: 1px solid #000;
    padding: 16px;
    background: #fff;
  }
  .tab-with-accordion .lr-panel.is-active {
    display: block;
  }
  .tab-with-accordion .lr-accordion {
    border: 1px solid #000;
    margin: 20px auto;      
  }
  .tab-with-accordion .lr-accordion__header {
    width: 100%;
    text-align: left;
    padding: 18px 24px;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: bold;
    background: transparent;
    border: none;
    position: relative;
  }
  .lr-accordion__header:after {
    content: "";
    justify-self: end;
    align-self: center;
    border-right: 2px solid #000;
    border-bottom: 2px solid #000;
    width: 8px;
    height: 8px;
    transform: rotate(45deg) translate(-25%, 0%);
  }
  button.lr-accordion__header[aria-expanded="true"]::after {
    transform: rotate(225deg) translate(0%, -45%);
  }
  .tab-with-accordion .lr-accordion__title {
    font-weight: 500;
    font-size: 18px;
    font-family: "Bakbak One", sans-serif;
    letter-spacing: 0;
    line-height: 100%;
  }   
  .tab-with-accordion .lr-accordion__content {
    padding: 18px 24px;
    border-top: 1px solid #000;
  }
  .tab-with-accordion .lr-batch-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .tab-with-accordion .lr-batch-list li {
    margin-bottom: 30px;
    font-weight: 500;
    font-size: 18px;
    font-family: "Bakbak One", sans-serif;
    color: #000;
    letter-spacing: 0;
    line-height: 100%;
  }
  .tab-with-accordion .lr-batch-list a {
    color: #000;
    font-weight: 700;
  }
  .tab-with-accordion .lr-empty {
    margin: 10px 0 0;
    opacity: 0.7;
    font-size: 14px;
  }
  @media screen and (max-width: 1024px) {
    
  }
  @media screen and (max-width: 767px) {
    
  }
{% endstyle %}

<section id="lab-results-{{ section.id }}" class="tab-with-accordion">
  <div class="page-width">
    <div class="lab-results-details">
      {% if section.settings.heading != blank %}
        <h2 class="lab-results__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      <!-- Dynamic Tabs -->
      {% assign unique_tabs_array = section.blocks | where: "type", "accordion" | map: "settings" | map: "tab_target" | uniq %}
      {% if unique_tabs_array.size > 0 %}
        <div class="lr-tabs" role="tablist" aria-label="Lab result categories">
          {% for tab in unique_tabs_array %}
              <button class="lr-tab{% if forloop.first %} is-active{% endif %}" role="tab" aria-selected="{% if forloop.first %}true{% else %}false{% endif %}" aria-controls="lr-{{ section.id }}-{{ tab }}" data-tab="{{ tab }}">
                {{ tab }}
              </button>
          {% endfor %}
        </div>
      {% endif %}
      <!-- Tab Panels -->
      {% for tab in unique_tabs_array %}
          <div id="lr-{{ section.id }}-{{ tab }}" class="lr-panel{% if forloop.first %} is-active{% endif %}" role="tabpanel" tabindex="0">
            {% for block in section.blocks %}
              {% if block.type == 'accordion' and block.settings.tab_target == tab %}
                <div class="lr-accordion" {{ block.shopify_attributes }}>
                  <button class="lr-accordion__header" type="button" aria-expanded="false">
                    <span class="lr-accordion__title">{{ block.settings.title | escape }}</span>
                  </button>
                  <div class="lr-accordion__content" hidden>
                    <ul class="lr-batch-list">
                      {{ block.settings.batch_list_html }}
                    </ul>
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
      {% endfor %}
    </div>
  </div>
</section>

<script>
  (function() {
    var root = document.getElementById('lab-results-{{ section.id }}');
    if (!root) return;
    var tabs = root.querySelectorAll('.lr-tab');
    var panels = root.querySelectorAll('.lr-panel');
    tabs.forEach(function(tab) {
      tab.addEventListener('click', function() {
        tabs.forEach(function(t) {
          t.classList.remove('is-active');
          t.setAttribute('aria-selected', 'false');
        });
        tab.classList.add('is-active');
        tab.setAttribute('aria-selected', 'true');
        var target = tab.getAttribute('data-tab');
        panels.forEach(function(p) {
          p.classList.remove('is-active');
        });
        var panel = root.querySelector('#lr-{{ section.id }}-' + target);
        if (panel) panel.classList.add('is-active');
      });
    });
    root.querySelectorAll('.lr-panel').forEach(function(panel) {
      var accordions = panel.querySelectorAll('.lr-accordion');
      accordions.forEach(function(acc) {
        var btn = acc.querySelector('.lr-accordion__header');
        var content = acc.querySelector('.lr-accordion__content');
        if (!btn || !content) return;
        btn.addEventListener('click', function() {
          var expanded = btn.getAttribute('aria-expanded') === 'true';
          accordions.forEach(function(otherAcc) {
            if (otherAcc !== acc) {
              var otherBtn = otherAcc.querySelector('.lr-accordion__header');
              var otherContent = otherAcc.querySelector('.lr-accordion__content');
              if (otherBtn && otherContent) {
                otherBtn.setAttribute('aria-expanded', 'false');
                otherContent.setAttribute('hidden', '');
              }
            }
          });
          btn.setAttribute('aria-expanded', String(!expanded));
          if (expanded) {
            content.setAttribute('hidden', '');
          } else {
            content.removeAttribute('hidden');
          }
        });
      });
    });
  })();
</script>

{% schema %}
  {
    "name": "Tab with accordion",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Check Out Our Lab Test Results:"
      }
    ],
    "blocks": [
      {
        "type": "accordion",
        "name": "Accordion",
        "settings": [
          {
            "type": "text",
            "id": "tab_target",
            "label": "Tab ID and Title"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Question"
          },
          {
            "type": "richtext",
            "id": "batch_list_html",
            "label": "Answer"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Tab with accordion"
      }
    ]
  }
{% endschema %}