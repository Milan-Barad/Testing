{% style %}
  .memorial-day-banner {
    {% if section.settings.bg_image != blank %}
      background-image: url({{ section.settings.bg_image | image_url }});
      background-position: center center;
      background-repeat: no-repeat;
      background-size: cover;
    {% endif %}
    padding: 40px 0 27px 0;
  }
  .memorial-day-banner .page-width {
    max-width: 1230px;
    padding: 0 15px;
    margin: 0 auto;
    width: 100%;
    display: block;
  }
  .memorial-day-banner .banner-content {
    text-align: center;
  }
  .memorial-day-banner .banner-content h1 {
    font-size: 76px;
    line-height: 86px;
    letter-spacing: 0;
    font-weight: 700;
    text-transform: capitalize;
    color: #5D3B4B;
    font-family: 'Aleo', serif;
    margin: 50px 0 7px 0;
  }
  .memorial-day-banner .banner-content h3 {
    font-size: 68px;
    line-height: 78px;
    letter-spacing: 0;
    font-weight: 700;
    color: #5D3B4B;
    margin: 0;
    font-family: 'Aleo', serif;
  }
  .memorial-day-banner .banner-content h4 {
    font-size: 30px;
    line-height: 40px;
    letter-spacing: 0;
    font-weight: 700;
    color: #FFF;
    margin: 0;
    font-family: 'Aleo', serif;
  }
  .memorial-day-banner .banner-content a {
    display: block;
    background: #642F4E;
    color: #FFF;
    border-radius: 6px;
    max-width: 456px;
    margin: 0 auto;
    padding: 21.5px 20px;
    font-size: 22px;
    line-height: 32px;
    letter-spacing: 0;
    font-weight: 700;
    font-family: Helvetica;
    margin: 52px 0 129px 0;
    text-transform: uppercase;
    -webkit-transition: all 0.3s ease-in-out;
    -moz-transition: all 0.3s ease-in-out;
    -ms-transition: all 0.3s ease-in-out;
    -o-transition: all 0.3s ease-in-out;
    transition: all 0.3s ease-in-out;
  }
  .memorial-day-banner .banner-content a:hover {
    background: #DE5C70;
  }

  @media screen and (max-width: 1024px) {
    .memorial-day-banner .banner-content h1 {
      font-size: 66px;
      line-height: 56px;
    }
    .memorial-day-banner .banner-content h3 {
      font-size: 38px;
      line-height: 48px;
      margin: 20px 0 25px 0;
    }
    .memorial-day-banner .banner-content h4 {
      font-size: 22px;
      line-height: 32px;
    }
    .memorial-day-banner .banner-content a {
      padding: 13px 20px;
    }
  }
  
  @media screen and (max-width: 767px) {
    .memorial-day-banner {
      {% if section.settings.mobile_bg_image != blank %}
        background-image: url({{ section.settings.mobile_bg_image | image_url }});
      {% endif %}
      padding: 79px 0 18px 0;
    }
    .memorial-day-banner .banner-content h1 {
      font-size: 36px;
      line-height: 46px;
    }
    .memorial-day-banner .banner-content h3 {
      font-size: 26px;
      line-height: 36px;
    }
    .memorial-day-banner .banner-content a {
      max-width: 194px;
      padding: 8.5px 20px;
      font-size: 18px;
      line-height: 28px;
    }
    .memorial-day-banner .banner-content img {
      display: none;
    }
  }
{% endstyle %}

<section class="memorial-day-banner">
  <div class="page-width">
    <div class="banner-content">
      {% if section.settings.star != blank %}
        <img src="{{ section.settings.star | image_url }}" height="auto" width="auto" alt="Star">
      {% endif %}
      {% if section.settings.title != blank %}
        {{ section.settings.title }}
      {% endif %}
      {% if section.settings.sub_title != blank %}
        <h3>{{ section.settings.sub_title }}</h3>
      {% endif %}
      {% if section.settings.button_name != blank %}
        <a href="{{ section.settings.button_url }}">{{ section.settings.button_name }}</a>
      {% endif %}
      {% if section.settings.bottom_text != blank %}
        <h4>{{ section.settings.bottom_text }}</h4>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Memorial Day Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "star",
        "label": "Star Icon" 
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "sub_title",
        "label": "Sub Heading"
      },
      {
        "type": "text",
        "id": "button_name",
        "label": "Button Name"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button URL"
      },
      {
        "type": "text",
        "id": "bottom_text",
        "label": "Bottom Text"
      },
      {
        "type": "image_picker",
        "id": "bg_image",
        "label": "Desktop Background Image"
      },
      {
        "type": "image_picker",
        "id": "mobile_bg_image",
        "label": "Mobile Background Image"
      }
    ],
    "presets": [
      {
        "name": "Memorial Day Banner"
      }
    ]
  }
{% endschema %}