<style>
  .faq-section {
    padding-bottom: 27px;
  }
  .faq-section .container {
    max-width: 1400px;
    margin: 0 auto;
  }
  .faq-details {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 72px 0 49px;
  }
  .faq-details h2 {
    color: #000;
    font-family: 'Lato', sans-serif;
    font-size: 38px;
    font-weight: 500;
    line-height: normal;
  }
  section.faq-section nav.breadcrumb.inherit {
    color: #000;
    font-family: 'Lato', sans-serif;
    font-size: 18px;
    font-weight: 500;
    line-height: normal;
    padding-top: 10px;
  }
  section.faq-section .breadcrumb span {
    margin-left: 0 !important;
  }
  .question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #000;
    font-family: 'Lato', sans-serif;
    font-size: 16px;
    font-weight: 600;
    line-height: normal;
    cursor: pointer;
    border-top: 1px solid rgba(0, 0, 0, 0.15);
    padding: 24px 15px 25px;
  }
  .answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s ease-out;
  }
  .answer p,
  .answer ul {
    color: #575757;
    font-family: 'Lato', sans-serif;
    font-size: 14px;
    font-weight: 400;
    line-height: 40px;
    padding: 0 15px 20px;
  }
  .question.active .arrow {
    transform: rotate(180deg);
  }
  .question .arrow {
    display: flex;
    align-items: center;
    transition: transform 0.5s;
    width: 20px;
    height: 20px;
    background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M7 10l5 5 5-5z" fill="%23000"/></svg>') no-repeat center;
  }
  .tablinks.active_tab {
    color: #376eca;
  }
  .tablinks {
    border-left: 1px solid #a8a8a8;
    padding-left: 20px;
    color: #a8a8a8;
    font-family: 'Lato', sans-serif;
    font-size: 20px;
    font-weight: 700;
    line-height: normal;
    cursor: pointer;
  }
  ul.tab {
    display: flex;
    justify-content: center;
    padding-bottom: 70px;
    gap: 30px;
  }
  .faq-sections.order-questions .question:first-child,
  .faq-sections.miscellaneous-questions .question:first-child,
  .faq-sections.jewelry-questions .question:first-child {
    border-top: none;
  }
  .answer ul {
    list-style: disc;
    margin: 0 0 0 20px;
    line-height: 30px;
  }
  .answer ul li {
    list-style: disc;
  }
  ul.tab li.tablinks:first-child {
    border-left: none;
  }

  @media screen and (max-width: 1024px) {
    .faq-details h2 {
      font-size: 34px;
    }
    .question,
    .answer p,
    .answer ul {
      margin: 0 15px;
    }
    .faq-details {
      padding: 60px 0 49px;
    }
  }

  @media screen and (max-width: 767px) {
    .tablinks {
      font-size: 18px;
      padding: 10px 0;
      border: none;
    }
    ul.tab li.tablinks:nth-child(2) {
      border-top: 1px solid #a8a8a8;
      border-bottom: 1px solid #a8a8a8;
    }
    ul.tab {
      gap: 0;
      padding-bottom: 10px;
      flex-direction: column;
      align-items: center;
    }
    .faq-details h2 {
      font-size: 30px;
    }
    .question {
      font-size: 15px;
      padding: 25px 8px;
    }
    .faq-details {
      padding: 40px 0;
    }
    .answer p,
    .answer ul {
      line-height: 30px;
    }
  }
</style>

<section class="faq-section">
  <div class="container">
    <div class="faq-details">
      <h2>{{ section.settings.main_title }}</h2>
    </div>
    <ul class="tab">
      <li class="tablinks active_tab" data-tab="order-questions">Order Questions</li>
      <li class="tablinks" data-tab="miscellaneous-questions">Miscellaneous Questions</li>
      <li class="tablinks" data-tab="jewelry-questions">Jewelry Questions</li>
    </ul>
    <div class="faq-tabs-content">
      <div class="faq-sections order-questions">
        {% for block in section.blocks %}
          {% if block.type == 'order_questions' %}
            <div class="question">
              <p>{{ block.settings.questions_question }}</p>
              <div class="arrow"></div>
            </div>
            <div class="answer">
              {{ block.settings.questions_answer }}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tabs = document.querySelectorAll('.tablinks');
    const sections = document.querySelectorAll('.faq-sections');
    const questions = document.querySelectorAll('.question');

    // Show/hide tabs
    function showTab(tabClass) {
      sections.forEach(section => {
        section.style.display = section.classList.contains(tabClass) ? 'block' : 'none';
      });
    }

    // Set active tab
    function setActiveTab(clickedTab) {
      tabs.forEach(tab => {
        tab.classList.toggle('active_tab', tab === clickedTab);
      });
    }

    // Initialize default tab
    showTab('order-questions');

    // Tab click handler
    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const tabClass = tab.getAttribute('data-tab');
        showTab(tabClass);
        setActiveTab(tab);
      });
    });

    // Accordion handler
    questions.forEach(question => {
      question.addEventListener('click', () => {
        const answer = question.nextElementSibling;
        const isActive = question.classList.contains('active');

        // Close all other answers
        questions.forEach(q => {
          if (q !== question) {
            q.classList.remove('active');
            q.nextElementSibling.style.maxHeight = null;
          }
        });

        // Toggle current answer
        question.classList.toggle('active');
        answer.style.maxHeight = isActive ? null : `${answer.scrollHeight}px`;
      });
    });
  });
</script>

